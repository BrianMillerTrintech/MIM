@model MIMWebClient.Models.Account


<div id="login" style="display:none;">
    @using (@Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "loginForm" }))
    {
        <div class="row">
            <div class="col-xs-12">

                <div class="form-group" id="charName">
                    <label for="Name">Character Name</label>
                    @{
                        @Html.TextBoxFor(input => input.Name, string.Empty, new { @class = "form-control", placeholder = "Character name" })
                        @Html.ValidationMessageFor(input => input.Name, string.Empty, new { @class = "errorMsg" })

                    }
                    <span class="errorMsg"></span>
                </div>
 

                <div class="form-group" id="charPass">
                    <label for="password">Password</label>
                    @{
                        @Html.TextBoxFor(input => input.Password, string.Empty, new { id = "password", type = "password", @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(input => input.Password, string.Empty, new { @class = "errorMsg" })
                    }
                    <span class="errorMsg"></span>
                </div>
            
               

            
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-success pull-right" id="loginBtn">Login</button>
                <button type="button" class="btn btn-default pull-right margin-right-10" id="createCharWizard">Create a Character</button>
            </div>
        </div>
                    }
</div>

