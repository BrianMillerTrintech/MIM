@model MIMWebClient.Models.CreatePlayer
@{
    ViewBag.Title = "Chat";
}
<div class="container-fluid  full-height" style="margin-top: -73px;">
 
    <a id="open-left-panel" href="javascript:void(0);" class="full-height visible-xs" style="position: absolute; top: -120px; left: 0; width: 22%; z-index: 900"></a>
 
<div class="row full-height">
<div id="left-panel" class="col-xs-12 col-sm-3  hidden-xs full-height" style="display: table;">

<div id="info-char" class="full-height" style="display: table; width: 100%; height: 50%;">
    <div id="score" style="display: table-cell; width: 100%;" class="window">

        <div class="js-score" style="overflow-y: scroll; max-height: 40vh;">
            <h3 id="player-name" class="text-center">Malleus - </h3>

            <p class="text-center"><span id="player-gender"></span> <span id="player-race"></span> <span id="player-class"></span> Level <span id="player-level"></span></p>
            <p class="text-center">HP <span id="player-hp"></span>/<span id="player-max-hp"></span> Mana <span id="player-mana"></span>/<span id="player-max-mana"></span> Fatigue <span id="player-end"></span>/<span id="player-max-end"></span> </p>

            <div class="container">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="scoreContainer window-inner">
                            <h3 class="text-center">Attributes</h3>

                            <table width="100%">
                                <tr>
                                    <td>Strength</td>
                                    <td> <span class="pull-right"> <span id="player-str"></span> / <span id="player-max-str"></span> </span> </td>
                                </tr>
                                <tr>
                                    <td>Dexterity</td>
                                    <td> <span class="pull-right"><span id="player-dex"></span> / <span id="player-max-dex"></span></span></td>
                                </tr>
                                <tr>
                                    <td>Constitution</td>
                                    <td> <span class="pull-right"> <span id="player-con"></span> / <span id="player-max-con"></span></span></td>
                                </tr>
                                <tr>
                                    <td>Intelligence</td>
                                    <td> <span class="pull-right"><span id="player-int"></span> / <span id="player-max-int"></span></span></td>
                                </tr>
                                <tr>
                                    <td>Wisdom</td>
                                    <td><span class="pull-right"><span id="player-wis"></span> / <span id="player-max-wis"></span></span></td>
                                </tr>
                                <tr>
                                    <td>Charisma</td>
                                    <td> <span class="pull-right"><span id="player-cha"></span> / <span id="player-max-cha"></span></span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="scoreContainer window-inner">
                            <h3 class="text-center">Armour</h3>

                            <table width="100%">
                                <tr>
                                    <td>Armour</td>
                                    <td><span class="pull-right">N/A</span></td>
                                </tr>

                                <tr>
                                    <td>Pierce</td>
                                    <td><span class="pull-right">N/A</span></td>
                                </tr>

                                <tr>
                                    <td>Slash</td>
                                    <td><span class="pull-right">N/A</span></td>
                                </tr>
                                <tr>
                                    <td>Bash</td>
                                    <td><span class="pull-right">N/A</span></td>
                                </tr>
                                <tr>
                                    <td>Magic</td>
                                    <td><span class="pull-right">N/A</span></td>
                                </tr>

                            </table>
                        </div>
                    </div>
                </div>
</div>
                <div class="container">
                    <div class="row">
                        <div class="pull-left" style="margin-right: 20px;">
                            <table>

                                @*<tr>
                                <td>Reclass</td>
                                <td>: <span id="player-sub-class"></span></td>
                            </tr>*@

                                <tr>
                                    <td>Alignment</td>
                                    <td>: <span id="player-alignment"></span></td>
                                </tr>
                            </table>


                        </div>
                        <div class="pull-left">



                        </div>
                    </div>
                </div>

                <div class="container" style="margin-top: 20px">
                    <div class="row">
                        <div class="pull-left " style="margin-right: 20px;">
                            <table>
                              
                                <tr>
                                    <td>Hit Roll</td>
                                    <td>: <span id="player-hitroll"></span></td>
                                </tr>
                                <tr>
                                    <td>Dam Roll</td>
                                    <td>: <span id="player-damroll"></span></td>
                                </tr>
                                <tr>
                                    <td>Wimpy</td>
                                    <td>: <span id="player-wimpy"></span></td>
                                </tr>
                            </table>


                        </div>
                        <div class="pull-left">
                            <table>
                                <tr>
                                    <td>Weight</td>
                                    <td>: <span id="player-weight"></span> of <span id="player-max-weight"></span></td>
                                </tr>

                                <tr>
                                    <td>Status</td>
                                    <td>: <span id="player-status"></span></td>
                                </tr>
                                <tr>
                                    <td>Age</td>
                                    <td>: N/A</td>
                                </tr>
                                <tr>
                                    <td>Hours</td>
                                    <td>: <span id="player-hours"></span></td>
                                </tr>
                                <tr>
                                    <td>Quest Points</td>
                                    <td>: N/A</td>
                                </tr>
                                <tr>
                                    <td>Experience</td>
                                    <td>: <span id="player-experience"></span></td>
                                </tr>
                            </table>


                        </div>
                    </div>
                </div>

                <div class="container" style="margin-top: 20px">
                    <div class="row">
                        <div class="pull-left" style="margin-right: 20px;">
                            <table>
                                <tr>
                                    <td>Copper</td>
                                    <td>: <span id="player-copper"></span></td>
                                </tr>
                                <tr>
                                    <td>Silver</td>
                                    <td>: <span id="player-silver"></span></td>
                                </tr>
                                <tr>
                                    <td>Gold</td>
                                    <td>: <span id="player-gold"></span></td>
                                </tr>
                                <tr>
                                    <td>Platinum</td>
                                    <td>: N/A</td>
                                </tr>

                            </table>


                        </div>
                        <div class="pull-left">




                        </div>
                    </div>
                </div>

            </div>
    </div>
</div>

<div id="info-inv" class="full-height" style="display: table; width: 100%; height: 50%;">
    <div style="display: table-cell; width: 100%;" class="window">
        <h3>Inventory</h3>

        <div id="invList"></div>
    </div>

</div>
</div>
<div id="main-panel" class="col-xs-12 col-sm-6 full-height">

    <div id="discussion" class="full-height window" style="overflow-y: scroll; padding: 15px;"></div>
</div>
<div  id="right-panel" class="col-xs-12 col-sm-3 hidden-xs full-height" style="display: table;">

    <div id="info-room" class="full-height" style="display: table; width: 100%; height: 50%;">

        <div style="display: table-cell; width: 100%;" class="window">
            <h3>Room Info</h3>
        </div>

    </div>

    <div id="info-quest" class="full-height" style="display: table; width: 100%; height: 50%;">
        <div style="display: table-cell; width: 100%;" class="window">
            <h3>Quests</h3>
        </div>
    </div>
</div>
</div>


    <a id="open-right-panel" href="javascript:void(0);" class="full-height visible-xs" style="position: absolute; top: -120px; right: 0; width: 22%; z-index: 900"></a>




<div class="modal" tabindex="-1" role="dialog" data-show="true" style="display: block;" id="signUpModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-3 active raceBreadCrumb"><span class="hidden-xs">Choose</span> Race
                    </div>
                    <div class="col-xs-3 classBreadCrumb"><span class="hidden-xs">Choose</span> Class
                    </div>
                    <div class="col-xs-3 statsBreadCrumb"><span class="hidden-xs">Roll</span> Stats
                    </div>
                    <div class="col-xs-3 infoBreadCrumb"><span class="hidden-xs">Character</span> Info
                    </div>
                </div>
            </div>
            <div class="modal-body">


                @{ Html.RenderPartial("~/Views/Home/Partial/Account/Login.cshtml"); }

                @{ Html.RenderPartial("~/Views/Home/Partial/CharacterCreation/RaceSelection.cshtml"); }

                @{ Html.RenderPartial("~/Views/Home/Partial/CharacterCreation/ClassSelection.cshtml"); }

                @{ Html.RenderPartial("~/Views/Home/Partial/CharacterCreation/StatSelection.cshtml"); }

                @{ Html.RenderPartial("~/Views/Home/Partial/CharacterCreation/CharSelection.cshtml"); }

                <!-- TODO: Stat Partial & Char info partial -->

            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</div>
<div class="container-fluid" style="position: absolute; bottom: 0; width: 100%">
    <div class="row">
        <div class="col-xs-4">
            <div class="progress">
                <div id="HP-bar" class="progress-bar progress-bar-danger" role="progressbar" style="width:0%">
                    <span id="stat-HP"></span>/<span id="stat-max-HP"></span>
                </div>
            </div>
            
        </div>
        <div class="col-xs-4">
            <div class="progress">
                <div id="mana-bar" class="progress-bar progress-bar-info" role="progressbar" style="width:0%">
                    <span id="stat-mana"></span>/<span id="stat-max-mana"></span>
                </div>
            </div>

             
        </div>
        <div class="col-xs-4">
            <div class="progress">
                <div id="end-bar" class="progress-bar progress-bar-success" role="progressbar" style="width:0%">
                    <span id="stat-endurance"></span>/<span id="stat-max-endurance"></span>
                </div>

                </div>
            </div>

    </div>
    <div class="row hidden">
        <div class="col-xs-12" style="position: relative;">
            <div class="progress">
                <div id="tnl-bar" class="progress-bar progress-bar-warning" role="progressbar" style="width:0%">
                    <span id="stat-tnl"></span> tnl
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="position: relative;">
            <form onSubmit="return false;">
                <input type="text" id="message" class="form-control" placeholder="Type here..." autofocus style="background: #101010; color: #f1f1f1; margin-bottom: 15px;" />
                <button type="submit" id="sendmessage"  style="position: absolute; right: 25px; top: 5px; background: #fed967; border: 1px solid #ff8c00">send</button>
            </form>
        </div>


    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/UI/JS/MIM.js"></script>
}
