<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background:#272624;
            color:#f1f1f1;
        }
        pre {
            background:#272624;
            color:#f1f1f1;
            border:0 none;
            padding:10px;
        }

      .modal-content {
    background: #272624;
    border: 4px solid #525045;
    box-shadow: inset 0px 0px 15px 2px #000000,0px 0px 15px 8px #000;
}

      .modal-header {
            background: transparent;
            border: 0 none;
            font-weight:bold;
                font-size: 16px;
                text-align:center;
                padding-bottom:0;
      }

      .modal-header .active {
          color:#fed967;
          text-shadow: -1px 0 0 #a05408;
      }

        #select-race a{
               padding: 10px 0;
                display: block;
                border: 1px solid #525045;
                margin-bottom: 10px;
                   margin: 0 -25px 10px -13px;
                color:#fed967;
                box-shadow:inset 0px 0px 15px 2px #000000;
        }

          #select-race a:hover {
           background:#3a2d1f;
        }

        #select-race .active {
           border-color: #df770f;
           box-shadow:inset 0px 0px 15px 2px #a05408;
    text-shadow: -2px -2px 0 #000;

        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MIM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
      
 
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
